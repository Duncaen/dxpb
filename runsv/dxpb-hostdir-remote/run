#!/bin/sh

unset USER GROUP WRKDIR HOSTDIR SSLDIR ENDPOINT LOGFILE ARGS

[ -f ./conf ] && . ./conf

: ${LOGFILE:=/dev/null}

: ${USER:=_dxpb_filer}
: ${GROUP:=_dxpb:_dxpb_filer:_dxpb_ssl}

[ -z "$WRKDIR" -a -z "$HOSTDIR" ] && echo "Will not start - need a hostdir to own" && exit 1

args=""
[ -n "$SSLDIR" ] && args="$args -k $SSLDIR"
[ -n "$HOSTDIR" ] && args="$args -r $HOSTDIR"
[ -n "$ENDPOINT" ] && args="$args -f $ENDPOINT"

[ -n "$WRKDIR" ] && cd "$WRKDIR"

exec chpst -u $USER:$GROUP dxpb-hostdir-remote $args $ARGS >$LOGFILE 2>&1
