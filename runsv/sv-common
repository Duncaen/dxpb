for dir in /var/run/dxpb /var/lib/dxpb/staging /var/lib/dxpb/logs /var/lib/dxpb/pkgs /var/cache/dxpb /var/log/dxpb; do
	mkdir -p $dir
done

chown root:_dxpb /var/run/dxpb
chmod 770 /var/run/dxpb

chown _dxpb_filer:_dxpb /var/lib/dxpb/*
chmod 755 /var/lib/dxpb

chown _dxpb_grapher:_dxpb_import /var/cache/dxpb/
chmod 775 /var/cache/dxpb

chown root:_dxpb /var/log/dxpb
chmod 770 /var/log/dxpb
touch /var/log/dxpb/capnp.pack
chmod 664 /var/log/dxpb/capnp.pack
chown root:_dxpb /var/log/dxpb/capnp.pack
